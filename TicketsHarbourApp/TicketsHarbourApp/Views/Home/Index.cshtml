@{
    ViewData["Title"] = "Home Page";
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />

    <title>Image Carousel</title>
</head>
<body>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2000">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://www.shutterstock.com/image-photo/crowd-partying-stage-lights-live-600nw-2297236461.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5 style="font-weight: bold"> Discover the hottest events in town!   </h5>
                    <p> Secure your tickets now and experience unforgettable moments with our exclusive offers. </p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://connectrwanda.org/wp-content/uploads/2020/01/Ticket-PNG-Free-Download.png" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5 style="font-weight: bold">  Be part of the action!</h5>
                    <p>Grab your tickets for the upcoming concerts, sports events, and shows.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://media.istockphoto.com/id/1331434818/photo/group-of-friends-dancing-at-a-concert.jpg?s=612x612&w=0&k=20&c=zpfi4VBhx7uFF5jLtsa-a9mE3LyQIP2yxUrkST9TI1Q=" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5 style="font-weight: bold">  Don't miss out on the excitement!  </h5>
                    <p> Snag your tickets to the best shows in town and immerse yourself in a world of live entertainment and unforgettable experiences.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <br><br>

    <div class="flip-card">
        <div class="flip-card-inner">
            <div class="flip-card-front">
                <img src="https://www.anshikamedia.com/wp-content/uploads/2023/12/our-team.png" alt="Avatar" style="width:300px;height:400px;">
            </div>
            <div class="flip-card-back">
                <h1>Our team</h1> <br><br>
                <p>John Doe and Liza Rose-back end supporters.</p>
                <p>Adam Smith- front end supporter.</p>
                <p>Alesk Johnson- in charge of coordinating of our exciting new events.</p>
            </div>
        </div>
    </div>

    <div class="flip-card">
        <div class="flip-card-inner">
            <div class="flip-card-front">
                <img src="https://cdn4.iconfinder.com/data/icons/people-avatars-8/256/PEOPLE_ICON-21-512.png" alt="Avatar" style="width:300px;height:400px;">
            </div>
            <div class="flip-card-back">
                <h1>About us</h1> <br><br />
                <p>The office: The Michael Scott Tickets Company</p>
                <p>Phone number:07777777</p>
                <p>Email: info@ticketsharbour.com</p>
                <p>Location: Scranton Business Park (1725 Slough Avenue, Scranton, PA 18501). </p>
            </div>
        </div>
    </div>

    <div class="flip-card">
        <div class="flip-card-inner">
            <div class="flip-card-front">
                <img src="" alt="Avatar" style="width:300px;height:400px;">
            </div>
            <div class="flip-card-back">
                <h1>John Doe</h1> <br>
                <p>Architect & Engineer</p>
                <p>We love that guy</p>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>