@model IEnumerable<TicketsHarbourApp.Models.Event.EventIndexVM>

@{
    ViewData["Title"] = "Index";
}
<h1>All events</h1>
<br>

<table cellpadding="10">
    <thead>
        <tr style="padding:10px">
            <th>Concert Name</th>
            <th>Location Name</th>
            <th>Beginning</th>
            <th>Price</th>
            <th>Discount</th>
            <th>Picture</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="padding:10px; border-bottom: 1px solid #ffffff;">
                <td>@item.ConcertName</td> 
                <td>@item.LocationName</td>
                <td>@item.Beginning</td>
                <td>@item.Price</td>
                <td>@item.Discount</td>
                <td><img src="@item.Picture" alt="Event Picture" style="max-width: 100px; max-height: 100px;" /></td>
                <!-- Add more columns as needed -->
            </tr>
        }
    </tbody>
</table>

