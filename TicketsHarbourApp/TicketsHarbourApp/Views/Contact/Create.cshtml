@model TicketsHarbourApp.Models.Contact.ContactCreateVM

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/contact.css" asp-append-version="true" />

   
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
    <div style="text-align:center">
            <h2>Contact Us</h2>
            <p>Swing by for a cup of coffee, or leave us a message:</p>
     </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Names"></label>
        <input asp-for="Names" class="form-control" />
        <span asp-validation-for="Names" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Message"></label>
        <textarea asp-for="Message" class="form-control"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>
    <br>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
